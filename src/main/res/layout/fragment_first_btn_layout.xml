<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstBtnLayoutFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/FirstBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editLayout">

        <Button
            android:id="@+id/BtnC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="30dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/FirstBtnLayout"
            app:layout_constraintBottom_toBottomOf="@+id/FirstBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/historyBtn"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/historyBtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            android:text="History"
            app:layout_constraintLeft_toRightOf="@id/BtnC"
            app:layout_constraintTop_toTopOf="@id/FirstBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FirstBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/BtnPlus"/>

        <Button
            android:id="@+id/BtnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/FirstBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FirstBtnLayout"
            app:layout_constraintLeft_toRightOf="@id/historyBtn"
            android:layout_marginRight="20dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>