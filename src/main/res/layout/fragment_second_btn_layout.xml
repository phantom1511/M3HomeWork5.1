<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondBtnLayoutFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/SecondBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/FirstBtnLayout"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/num7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/SecondBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/SecondBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num8"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/num8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num7"
            app:layout_constraintTop_toTopOf="@id/SecondBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/SecondBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num9"/>

        <Button
            android:id="@+id/num9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num8"
            app:layout_constraintTop_toTopOf="@id/SecondBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/SecondBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/BtnMinus"/>

        <Button
            android:id="@+id/BtnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/SecondBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/SecondBtnLayout"
            app:layout_constraintLeft_toRightOf="@id/num9"
            android:layout_marginRight="20dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>