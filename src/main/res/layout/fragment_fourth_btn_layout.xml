<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FourthBtnLayoutFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/FourthBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ThirdBtnLayout"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/FourthBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FourthBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num2"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num1"
            app:layout_constraintTop_toTopOf="@id/FourthBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FourthBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num3"/>

        <Button
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num2"
            app:layout_constraintTop_toTopOf="@id/FourthBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FourthBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/BtnDiv"/>

        <Button
            android:id="@+id/BtnDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/FourthBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FourthBtnLayout"
            app:layout_constraintLeft_toRightOf="@id/num3"
            android:layout_marginRight="20dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>