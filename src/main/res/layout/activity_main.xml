<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorWhite">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/numField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="60dp"
            android:textColor="@color/colorGrey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/FirstBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editLayout">

        <Button
            android:id="@+id/BtnC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="30dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/FirstBtnLayout"
            app:layout_constraintBottom_toBottomOf="@+id/FirstBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/historyBtn"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/historyBtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            android:text="History"
            app:layout_constraintLeft_toRightOf="@id/BtnC"
            app:layout_constraintTop_toTopOf="@id/FirstBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FirstBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/BtnPlus"
            android:onClick="getHistory"/>

        <Button
            android:id="@+id/BtnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/FirstBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FirstBtnLayout"
            app:layout_constraintLeft_toRightOf="@id/historyBtn"
            android:layout_marginRight="20dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/SecondBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/FirstBtnLayout"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/num7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/SecondBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/SecondBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num8"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/num8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num7"
            app:layout_constraintTop_toTopOf="@id/SecondBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/SecondBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num9"/>

        <Button
            android:id="@+id/num9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num8"
            app:layout_constraintTop_toTopOf="@id/SecondBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/SecondBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/BtnMinus"/>

        <Button
            android:id="@+id/BtnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/SecondBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/SecondBtnLayout"
            app:layout_constraintLeft_toRightOf="@id/num9"
            android:layout_marginRight="20dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ThirdBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/SecondBtnLayout"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/ThirdBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/ThirdBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num5"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num4"
            app:layout_constraintTop_toTopOf="@id/ThirdBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/ThirdBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num6"/>

        <Button
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num5"
            app:layout_constraintTop_toTopOf="@id/ThirdBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/ThirdBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/BtnPhr"/>

        <Button
            android:id="@+id/BtnPhr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ThirdBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/ThirdBtnLayout"
            app:layout_constraintLeft_toRightOf="@id/num6"
            android:layout_marginRight="20dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/FourthBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ThirdBtnLayout"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/FourthBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FourthBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num2"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num1"
            app:layout_constraintTop_toTopOf="@id/FourthBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FourthBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num3"/>

        <Button
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num2"
            app:layout_constraintTop_toTopOf="@id/FourthBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FourthBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/BtnDiv"/>

        <Button
            android:id="@+id/BtnDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/FourthBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FourthBtnLayout"
            app:layout_constraintLeft_toRightOf="@id/num3"
            android:layout_marginRight="20dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/FifthBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorGrey"
        app:layout_constraintRight_toLeftOf="@id/EqualLayout"
        app:layout_constraintTop_toBottomOf="@+id/FourthBtnLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <Button
            android:id="@+id/num0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25dp"
            android:background="@color/colorGrey"
            android:textColor="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/FifthBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FifthBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/BtnDot"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/BtnDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="25dp"
            android:background="@color/colorGrey"
            android:textColor="@color/colorWhite"
            app:layout_constraintLeft_toRightOf="@id/num0"
            app:layout_constraintTop_toTopOf="@id/FifthBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/FifthBtnLayout"
            android:layout_marginLeft="5dp"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/EqualLayout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8.9dp"
        android:background="@color/colorRed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FourthBtnLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="5dp">
        <Button
            android:id="@+id/BtnEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="25dp"
            android:background="@color/colorRed"
            android:textColor="@color/colorWhite"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>