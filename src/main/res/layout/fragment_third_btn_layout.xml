<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThirdBtnLayoutFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ThirdBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/SecondBtnLayout"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/ThirdBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/ThirdBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num5"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num4"
            app:layout_constraintTop_toTopOf="@id/ThirdBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/ThirdBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/num6"/>

        <Button
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/num5"
            app:layout_constraintTop_toTopOf="@id/ThirdBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/ThirdBtnLayout"
            app:layout_constraintRight_toLeftOf="@id/BtnPhr"/>

        <Button
            android:id="@+id/BtnPhr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorGrey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ThirdBtnLayout"
            app:layout_constraintBottom_toBottomOf="@id/ThirdBtnLayout"
            app:layout_constraintLeft_toRightOf="@id/num6"
            android:layout_marginRight="20dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>